<div class="row" style="color:black">
    <div class="col s12 m8">
        
        <div class="card story">
            <div class="card-content">
                <h2>{{{story.body}}}</h2>
                <span class="card-title" style="text-align:right;padding-right:20%"> ~ {{story.title}}</span>
            </div>
            <h6 style="text-align:right">{{formatDate date 'Do MMMM YYYY, h:mm:ss a'}}
            <small>{{{editIcon story.user user story._id false}}}</small>
        </h6>
        </div>
        
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/quotes/user/{{story.user._id}}">More From {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>