<h1 style="text-shadow:7px 2px black">Quotes</h1>
<div class="row" style="color:black">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    
                    <h4>{{stripTags (truncate body 150)}}</h4>
                    <p>~ {{title}}</p>
                    <br>
                    {{!-- <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/quotes/user/{{user._id}}">
                            {{user.displayName}}
                        </a>
                    </div> --}}
                </div>
                <div class="card-action center-align">
                    <a href="/quotes/{{_id}}" class="btn grey">Read more</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No quotes to display</p>
    {{/each}}
</div>